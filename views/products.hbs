{{#if myProducts.length}}
  <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
    {{#each myProducts}}
      <div class="col">
        <div class="card shadow-sm">
          <img src="{{image}}" />
          <div class="card-body">
            <p class="card-text fw-bold">{{title}}</p>
            <p class="card-text">{{description}}</p>
            <div class="d-flex justify-content-between align-items-center">
              <div
                class="d-flex gap-2 justify-content-between align-items-center"
              >
                <p class="avatar bg-primary">{{getFullNameFirstCharacter
                    user.firstname
                    user.lastname
                  }}</p>
                <p class="m-0 p-0">{{user.firstname}} {{user.lastname}}</p>
              </div>
              <small class="text-muted fs-5">{{price}}.00$</small>
            </div>
          </div>
        </div>
      </div>
    {{/each}}
  </div>
{{else}}
  <p>No product</p>
{{/if}}